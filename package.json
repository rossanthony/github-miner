{
  "name": "github-miner",
  "version": "0.0.2",
  "description": "A Node.js app for mining data from github/npm and plotting into a Neo4j graph database.",
  "main": "index.js",
  "scripts": {
    "setup": "docker-compose run --use-aliases --rm node npm install",
    "mine": "docker-compose run --use-aliases --rm node npm run ts-node-mine",
    "ts-node-mine": "ts-node src/miner.ts",
    "insert": "ts-node src/insertData.ts",
    "total-repos": "find ./data/repos/* github.json -maxdepth 1 -type d | wc -l",
    "total-modules": "find ./data/repos/* package.json -maxdepth 1 -type d | wc -l",
    "unit-tests": "jest --forceExit --coverage --verbose --detectOpenHandles",
    "clean": "rm -rf ./node_modules && rm -rf ./build",
    "compile": "tsc",
    "compile-watch": "tsc -w",
    "lint": "eslint ./src/**/*.ts"
  },
  "author": "Ross Anthony <rantho01@mail.bbk.ac.uk>",
  "repository": "rossanthony/github-miner",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^2.0.0",
    "express": "^4.9.7",
    "fs-extra": "^8.1.0",
    "lodash": "^4.17.15",
    "moment": "^2.14.1",
    "neo4j": "^1.1.1",
    "neo4j-driver": "^1.7.5",
    "ora": "^3.4.0",
    "read-package-json": "^2.0.13",
    "request": "^2.88.0",
    "shelljs": "^0.8.3"
  },
  "devDependencies": {
    "@types/dotenv": "^6.1.1",
    "@types/fs-extra": "^8.0.0",
    "@types/jest": "^24.0.18",
    "@types/lodash": "^4.14.136",
    "@types/moment": "^2.13.0",
    "@types/neo4j": "^2.0.2",
    "@types/node": "^12.7.4",
    "@types/request": "^2.48.2",
    "@types/shelljs": "^0.8.5",
    "@typescript-eslint/eslint-plugin": "^1.12.0",
    "@typescript-eslint/parser": "^1.12.0",
    "eslint": "^5.16.0",
    "jest": "^24.9.0",
    "nock": "^11.3.3",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.3.0",
    "typescript": "^3.6.2"
  },
  "jest": {
    "testEnvironment": "node",
    "verbose": true
  },
  "engines": {
    "node": ">=10.13.0"
  }
}
